<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard - Webinar System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar {
            background: #2c3e50;
            color: white;
            height: 100vh;
            position: fixed;
        }
        .main-content {
            margin-left: 250px;
            padding: 20px;
        }
        .stat-card {
            transition: transform 0.3s;
        }
        .stat-card:hover {
            transform: translateY(-5px);
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar w-250">
        <div class="p-3">
            <h4>ðŸŽ¯ Webinar Admin</h4>
            <p class="text-muted">Welcome, <strong><%= adminUser %></strong></p>
            <p class="text-muted small">Logged in: <%= loginTime.toLocaleString() %></p>
        </div>
        
        <nav class="nav flex-column">
            <a class="nav-link text-white active" href="/admin/dashboard">
                <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>
            <a class="nav-link text-white" href="/admin/users">
                <i class="fas fa-users"></i> Users (<%= totalUsers %>)
            </a>
            <a class="nav-link text-white" href="/admin/emails">
                <i class="fas fa-envelope"></i> Send Emails
            </a>
            <a class="nav-link text-white" href="/admin/logout" 
               onclick="return confirm('Are you sure you want to logout?')">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>ðŸ“Š Dashboard Overview</h2>
            <span class="badge bg-primary">Live</span>
        </div>

        <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <!-- Stats Cards -->
        <div class="row">
            <div class="col-md-3">
                <div class="card stat-card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4><%= totalUsers %></h4>
                                <p>Total Users</p>
                            </div>
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3">
                <div class="card stat-card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4><%= paidUsersCount %></h4>
                                <p>Paid Users</p>
                            </div>
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3">
                <div class="card stat-card bg-warning text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4><%= pendingUsersCount %></h4>
                                <p>Pending Payments</p>
                            </div>
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3">
                <div class="card stat-card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4>â‚¹<%= totalRevenue %></h4>
                                <p>Total Revenue</p>
                            </div>
                            <i class="fas fa-rupee-sign fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Registrations -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>ðŸ“‹ Recent Registrations</h5>
                    </div>
                    <div class="card-body">
                        <% if (recentUsers.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th>Status</th>
                                            <th>Registered</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% recentUsers.forEach(user => { %>
                                            <tr>
                                                <td><%= user.name %></td>
                                                <td><%= user.email %></td>
                                                <td><%= user.phone %></td>
                                                <td>
                                                    <span class="badge <%= user.paymentStatus === 'completed' ? 'bg-success' : 'bg-warning' %>">
                                                        <%= user.paymentStatus %>
                                                    </span>
                                                </td>
                                                <td><%= user.registeredAt.toLocaleDateString() %></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <p class="text-muted">No recent registrations</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>