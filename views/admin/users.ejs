<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management - WebinarPro Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar {
            transition: all 0.3s ease;
        }
        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }
            .sidebar.active {
                transform: translateX(0);
            }
        }
        .btn-primary {
            background-color: #4f46e5;
            color: white;
            font-weight: 600;
            padding: 12px 24px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            background-color: #4338ca;
            transform: scale(1.05);
        }
    </style>
</head>
<body class="bg-gray-100">
    <!-- Mobile menu button -->
    <button class="md:hidden fixed top-4 left-4 z-50 bg-blue-600 text-white p-2 rounded-lg" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>

    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="sidebar w-64 bg-blue-800 text-white fixed h-full md:relative z-40">
            <div class="p-4 border-b border-blue-700">
                <h1 class="text-xl font-bold">WebinarPro Admin</h1>
                <p class="text-blue-200 text-sm">Dashboard</p>
            </div>
            
            <nav class="mt-6">
                <a href="/admin/dashboard" class="flex items-center px-4 py-3 text-blue-100 hover:bg-blue-700">
                    <i class="fas fa-tachometer-alt mr-3"></i>Dashboard
                </a>
                <a href="/admin/webinars" class="flex items-center px-4 py-3 text-blue-100 hover:bg-blue-700">
                    <i class="fas fa-video mr-3"></i>Webinars
                </a>
                <a href="/admin/users" class="flex items-center px-4 py-3 text-blue-100 hover:bg-blue-700 bg-blue-700">
                    <i class="fas fa-users mr-3"></i>Users
                </a>
                <a href="/admin/bulk-email" class="flex items-center px-4 py-3 text-blue-100 hover:bg-blue-700">
                    <i class="fas fa-envelope mr-3"></i>Bulk Email
                </a>
                <a href="/admin/logout" class="flex items-center px-4 py-3 text-blue-100 hover:bg-blue-700 mt-4">
                    <i class="fas fa-sign-out-alt mr-3"></i>Logout
                </a>
            </nav>
        </div>

        <!-- Main content -->
        <div class="flex-1 flex flex-col overflow-hidden md:ml-0">
            <!-- Top bar -->
            <header class="bg-white shadow-sm z-30">
                <div class="flex justify-between items-center p-4">
                    <div>
                        <h2 class="text-xl font-semibold text-gray-800">User Management</h2>
                    </div>
                    <div class="flex items-center space-x-4">
                        <span class="text-gray-600">Welcome, Admin</span>
                        <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center text-white">
                            <i class="fas fa-user"></i>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Page content -->
            <main class="flex-1 overflow-y-auto p-6">
                <div class="space-y-6">
                    <h1 class="text-2xl font-bold text-gray-800">User Management</h1>

                    <!-- Filters -->
                    <div class="bg-white rounded-xl shadow-sm p-6">
                        <form method="GET" action="/admin/users" class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <div>
                                <label class="block text-gray-700 text-sm font-medium mb-2">Filter by Webinar</label>
                                <select name="webinar" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                                    <option value="">All Webinars</option>
                                    <% if (typeof webinars !== 'undefined') { %>
                                        <% webinars.forEach(webinar => { %>
                                        <option value="<%= webinar._id %>" <%= (typeof filters !== 'undefined' && filters.webinar == webinar._id) ? 'selected' : '' %>>
                                            <%= webinar.title %>
                                        </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                            </div>

                            <div>
                                <label class="block text-gray-700 text-sm font-medium mb-2">Filter by Payment Status</label>
                                <select name="paymentStatus" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                                    <option value="">All Statuses</option>
                                    <option value="paid" <%= (typeof filters !== 'undefined' && filters.paymentStatus == 'paid') ? 'selected' : '' %>>Paid</option>
                                    <option value="pending" <%= (typeof filters !== 'undefined' && filters.paymentStatus == 'pending') ? 'selected' : '' %>>Pending</option>
                                    <option value="failed" <%= (typeof filters !== 'undefined' && filters.paymentStatus == 'failed') ? 'selected' : '' %>>Failed</option>
                                </select>
                            </div>

                            <div class="flex items-end">
                                <button type="submit" class="btn-primary w-full">
                                    <i class="fas fa-filter mr-2"></i>Apply Filters
                                </button>
                            </div>
                        </form>
                    </div>

                    <!-- Users Table -->
<!-- Users Table -->
<div class="bg-white rounded-xl shadow-sm overflow-hidden">
    <table class="w-full">
        <thead>
            <tr class="bg-gray-50 border-b border-gray-200">
                <th class="text-left py-4 px-6 text-gray-600 font-medium">User Details</th>
                <th class="text-left py-4 px-6 text-gray-600 font-medium">Webinar</th>
                <th class="text-left py-4 px-6 text-gray-600 font-medium">Registration Date</th>
                <th class="text-left py-4 px-6 text-gray-600 font-medium">Amount</th>
                <th class="text-left py-4 px-6 text-gray-600 font-medium">Payment Status</th>
            </tr>
        </thead>
        <tbody>
            <% if (typeof users !== 'undefined' && users.length > 0) { %>
                <% users.forEach(user => { %>
                <tr class="border-b border-gray-100 hover:bg-gray-50">
                    <td class="py-4 px-6">
                        <div>
                            <p class="font-medium text-gray-800"><%= user.name %></p>
                            <p class="text-sm text-gray-600"><%= user.email %></p>
                            <p class="text-sm text-gray-600"><%= user.phone %></p>
                        </div>
                    </td>
                    <td class="py-4 px-6">
                        <p class="text-gray-800">
                            <% if (user.webinarExists) { %>
                                <%= user.webinarTitle %>
                            <% } else { %>
                                <span class="text-gray-400 italic">Webinar not found</span>
                            <% } %>
                        </p>
                    </td>
                    <td class="py-4 px-6 text-gray-600">
                        <%= new Date(user.createdAt).toLocaleDateString() %>
                    </td>
                    <td class="py-4 px-6">
                        <span class="font-medium text-gray-800">â‚¹<%= user.amount || 0 %></span>
                    </td>
                    <td class="py-4 px-6">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                            <%= user.paymentStatus === 'paid' ? 'bg-green-100 text-green-800' : 
                               user.paymentStatus === 'pending' ? 'bg-yellow-100 text-yellow-800' : 
                               'bg-red-100 text-red-800' %>">
                            <%= user.paymentStatus.charAt(0).toUpperCase() + user.paymentStatus.slice(1) %>
                        </span>
                    </td>
                </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="5" class="py-12 text-center">
                        <i class="fas fa-users text-4xl text-gray-300 mb-3"></i>
                        <p class="text-gray-500">No users found</p>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
    <script>
        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('active');
        }
    </script>
</body>
</html>