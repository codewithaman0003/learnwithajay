<!DOCTYPE html>
<html>
<head>
    <title>Users Management - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <style>
        .sidebar {
            background: #2c3e50;
            color: white;
            height: 100vh;
            position: fixed;
            width: 250px;
            overflow-y: auto;
        }
        .main-content {
            margin-left: 250px;
            padding: 20px;
        }
        .stat-badge {
            font-size: 0.9em;
            padding: 5px 10px;
        }
        .user-actions .btn {
            margin: 2px;
        }
        .table-responsive {
            border-radius: 10px;
            overflow: hidden;
        }
        .filter-active {
            background-color: #0d6efd !important;
            color: white !important;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="p-3">
            <h4>ðŸŽ¯ Webinar Admin</h4>
            <p class="text-muted">Welcome, <strong><%= adminUser %></strong></p>
        </div>
        
        <nav class="nav flex-column">
            <a class="nav-link text-white" href="/admin/dashboard">
                <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>
            <a class="nav-link text-white active" href="/admin/users">
                <i class="fas fa-users"></i> Users 
                <span class="badge bg-light text-dark float-end"><%= totalCount %></span>
            </a>
            <a class="nav-link text-white" href="/admin/emails">
                <i class="fas fa-envelope"></i> Send Emails
            </a>
            <a class="nav-link text-white" href="/admin/logout" 
               onclick="return confirm('Are you sure you want to logout?')">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>
                <i class="fas fa-users me-2"></i>Users Management
            </h2>
            <div>
                <button class="btn btn-success" onclick="exportUsers()">
                    <i class="fas fa-download me-1"></i>Export CSV
                </button>
            </div>
        </div>

        <% if (error) { %>
            <div class="alert alert-danger alert-dismissible fade show">
                <strong>Error:</strong> <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h3><%= totalCount %></h3>
                                <p>Total Users</p>
                            </div>
                            <i class="fas fa-users fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h3><%= paidCount %></h3>
                                <p>Paid Users</p>
                            </div>
                            <i class="fas fa-check-circle fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h3><%= pendingCount %></h3>
                                <p>Pending Payments</p>
                            </div>
                            <i class="fas fa-clock fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h3><%= ((paidCount / totalCount) * 100 || 0).toFixed(1) %>%</h3>
                                <p>Conversion Rate</p>
                            </div>
                            <i class="fas fa-chart-line fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters and Search -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Filters & Search</h5>
            </div>
            <div class="card-body">
                <form method="GET" action="/admin/users" class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Filter by Status</label>
                        <div class="btn-group w-100" role="group">
                            <a href="/admin/users?filter=all" 
                               class="btn btn-outline-primary <%= filter === 'all' ? 'filter-active' : '' %>">
                                All Users
                            </a>
                            <a href="/admin/users?filter=paid" 
                               class="btn btn-outline-success <%= filter === 'paid' ? 'filter-active' : '' %>">
                                Paid (<%= paidCount %>)
                            </a>
                            <a href="/admin/users?filter=pending" 
                               class="btn btn-outline-warning <%= filter === 'pending' ? 'filter-active' : '' %>">
                                Pending (<%= pendingCount %>)
                            </a>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label">Search Users</label>
                        <div class="input-group">
                            <input type="text" class="form-control" name="search" 
                                   placeholder="Search by name, email, or phone..." 
                                   value="<%= search %>">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                            <% if (search) { %>
                                <a href="/admin/users?filter=<%= filter %>" class="btn btn-outline-secondary">
                                    <i class="fas fa-times"></i>
                                </a>
                            <% } %>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Users Table -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Users List</h5>
                <span class="badge bg-primary">Showing <%= users.length %> users</span>
            </div>
            <div class="card-body">
                <% if (users.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="usersTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Status</th>
                                    <th>Amount</th>
                                    <th>Registered</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach((user, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td>
                                            <strong><%= user.name %></strong>
                                        </td>
                                        <td>
                                            <i class="fas fa-envelope text-muted me-1"></i>
                                            <%= user.email %>
                                        </td>
                                        <td>
                                            <i class="fas fa-phone text-muted me-1"></i>
                                            <%= user.phone %>
                                        </td>
                                        <td>
                                            <% if (user.paymentStatus === 'completed') { %>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check me-1"></i>Paid
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-clock me-1"></i>Pending
                                                </span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <strong>â‚¹<%= user.amount || 49 %></strong>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                <%= user.registeredAt.toLocaleDateString() %>
                                                <br>
                                                <%= user.registeredAt.toLocaleTimeString() %>
                                            </small>
                                        </td>
                                        <td>
                                            <div class="user-actions">
                                                <% if (user.paymentStatus === 'pending') { %>
                                                    <button class="btn btn-sm btn-success" 
                                                            onclick="sendPaymentReminder('<%= user._id %>', '<%= user.email %>')"
                                                            title="Send Payment Reminder">
                                                        <i class="fas fa-bell"></i>
                                                    </button>
                                                <% } %>
                                                
                                                <button class="btn btn-sm btn-info" 
                                                        onclick="viewUserDetails('<%= user._id %>')"
                                                        title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                
                                                <button class="btn btn-sm btn-warning" 
                                                        onclick="sendEmailToUser('<%= user._id %>', '<%= user.email %>')"
                                                        title="Send Email">
                                                    <i class="fas fa-envelope"></i>
                                                </button>
                                                
                                                <button class="btn btn-sm btn-danger" 
                                                        onclick="deleteUser('<%= user._id %>', '<%= user.name %>')"
                                                        title="Delete User">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="fas fa-users fa-3x text-muted mb-3"></i>
                        <h4>No Users Found</h4>
                        <p class="text-muted">
                            <% if (search) { %>
                                No users match your search criteria "<%= search %>"
                            <% } else if (filter !== 'all') { %>
                                No <%= filter %> users found
                            <% } else { %>
                                No users have registered yet
                            <% } %>
                        </p>
                        <a href="/admin/users" class="btn btn-primary">View All Users</a>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- User Details Modal -->
        <div class="modal fade" id="userModal" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">User Details</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body" id="userDetails">
                        <!-- User details will be loaded here -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

    <script>
        // Initialize DataTable
        $(document).ready(function() {
            $('#usersTable').DataTable({
                pageLength: 25,
                order: [[6, 'desc']] // Sort by registration date
            });
        });

        // View user details
        function viewUserDetails(userId) {
            fetch(`/admin/api/users/${userId}`)
                .then(response => response.json())
                .then(user => {
                    const modalBody = `
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Personal Information</h6>
                                <p><strong>Name:</strong> ${user.name}</p>
                                <p><strong>Email:</strong> ${user.email}</p>
                                <p><strong>Phone:</strong> ${user.phone}</p>
                            </div>
                            <div class="col-md-6">
                                <h6>Payment Information</h6>
                                <p><strong>Status:</strong> 
                                    <span class="badge ${user.paymentStatus === 'completed' ? 'bg-success' : 'bg-warning'}">
                                        ${user.paymentStatus}
                                    </span>
                                </p>
                                <p><strong>Amount:</strong> â‚¹${user.amount || 49}</p>
                                <p><strong>Registered:</strong> ${new Date(user.registeredAt).toLocaleString()}</p>
                                ${user.paidAt ? `<p><strong>Paid At:</strong> ${new Date(user.paidAt).toLocaleString()}</p>` : ''}
                            </div>
                        </div>
                        ${user.razorpayPaymentId ? `
                            <div class="mt-3">
                                <h6>Payment Details</h6>
                                <p><strong>Razorpay Payment ID:</strong> ${user.razorpayPaymentId}</p>
                                <p><strong>Order ID:</strong> ${user.razorpayOrderId || 'N/A'}</p>
                            </div>
                        ` : ''}
                    `;
                    document.getElementById('userDetails').innerHTML = modalBody;
                    new bootstrap.Modal(document.getElementById('userModal')).show();
                })
                .catch(error => {
                    alert('Error loading user details: ' + error);
                });
        }

        // Send payment reminder
        function sendPaymentReminder(userId, email) {
            if (confirm(`Send payment reminder to ${email}?`)) {
                fetch(`/admin/api/users/${userId}/remind`, { method: 'POST' })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert('Payment reminder sent successfully!');
                        } else {
                            alert('Error: ' + data.message);
                        }
                    })
                    .catch(error => {
                        alert('Error sending reminder: ' + error);
                    });
            }
        }

        // Send email to specific user
        function sendEmailToUser(userId, email) {
            const subject = prompt('Enter email subject:');
            if (subject) {
                const message = prompt('Enter email message:');
                if (message) {
                    // Implement email sending logic here
                    alert(`Email would be sent to ${email} with subject: ${subject}`);
                }
            }
        }

        // Delete user
        function deleteUser(userId, userName) {
            if (confirm(`Are you sure you want to delete user "${userName}"? This action cannot be undone.`)) {
                fetch(`/admin/api/users/${userId}`, { method: 'DELETE' })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert('User deleted successfully!');
                            location.reload();
                        } else {
                            alert('Error: ' + data.message);
                        }
                    })
                    .catch(error => {
                        alert('Error deleting user: ' + error);
                    });
            }
        }

        // Export users to CSV
        function exportUsers() {
            const filter = '<%= filter %>';
            const search = '<%= search %>';
            window.open(`/admin/api/users/export?filter=${filter}&search=${search}`, '_blank');
        }
    </script>
</body>
</html>