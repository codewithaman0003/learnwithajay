<!DOCTYPE html>
<html>
<head>
    <title>Send Bulk Email - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar {
            background: #2c3e50;
            color: white;
            height: 100vh;
            position: fixed;
            width: 250px;
        }
        .main-content {
            margin-left: 250px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="p-3">
            <h4>ðŸŽ¯ Webinar Admin</h4>
            <p class="text-muted">Welcome, <strong><%= adminUser %></strong></p>
        </div>
        
        <nav class="nav flex-column">
            <a class="nav-link text-white" href="/admin/dashboard">
                <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>
            <a class="nav-link text-white" href="/admin/users">
                <i class="fas fa-users"></i> Users
            </a>
            <a class="nav-link text-white active" href="/admin/emails">
                <i class="fas fa-envelope"></i> Send Emails
            </a>
            <a class="nav-link text-white" href="/admin/logout" 
               onclick="return confirm('Are you sure you want to logout?')">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <h2>ðŸ“§ Send Bulk Email</h2>
        
        <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>
        
        <% if (success) { %>
            <div class="alert alert-success"><%= success %></div>
        <% } %>

        <div class="card">
            <div class="card-body">
                <form action="/admin/send-bulk-email" method="POST">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Filter Users</label>
                                <select class="form-select" name="filter" required>
                                    <option value="all">All Users</option>
                                    <option value="paid">Paid Users Only</option>
                                    <option value="pending">Pending Payment Users</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email Subject</label>
                        <input type="text" class="form-control" name="subject" required 
                               placeholder="Enter email subject">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email Message</label>
                        <textarea class="form-control" name="message" rows="8" required 
                                  placeholder="Enter your email message (HTML supported)"></textarea>
                        <small class="text-muted">You can use HTML tags for formatting</small>
                    </div>

                    <div class="alert alert-info">
                        <h6>ðŸ’¡ Available Variables:</h6>
                        <ul class="mb-0">
                            <li><code>{name}</code> - User's name</li>
                            <li><code>{email}</code> - User's email</li>
                            <li><code>{status}</code> - Payment status</li>
                        </ul>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-paper-plane"></i> Send Bulk Email
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>