<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bulk Email - WebinarPro Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar {
            transition: all 0.3s ease;
        }
        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }
            .sidebar.active {
                transform: translateX(0);
            }
        }
        .btn-primary {
            background-color: #4f46e5;
            color: white;
            font-weight: 600;
            padding: 12px 24px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            background-color: #4338ca;
            transform: scale(1.05);
        }
    </style>
</head>
<body class="bg-gray-100">
    <!-- Mobile menu button -->
    <button class="md:hidden fixed top-4 left-4 z-50 bg-blue-600 text-white p-2 rounded-lg" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>

    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="sidebar w-64 bg-blue-800 text-white fixed h-full md:relative z-40">
            <div class="p-4 border-b border-blue-700">
                <h1 class="text-xl font-bold">WebinarPro Admin</h1>
                <p class="text-blue-200 text-sm">Dashboard</p>
            </div>
            
            <nav class="mt-6">
                <a href="/admin/dashboard" class="flex items-center px-4 py-3 text-blue-100 hover:bg-blue-700">
                    <i class="fas fa-tachometer-alt mr-3"></i>Dashboard
                </a>
                <a href="/admin/webinars" class="flex items-center px-4 py-3 text-blue-100 hover:bg-blue-700">
                    <i class="fas fa-video mr-3"></i>Webinars
                </a>
                <a href="/admin/users" class="flex items-center px-4 py-3 text-blue-100 hover:bg-blue-700">
                    <i class="fas fa-users mr-3"></i>Users
                </a>
                <a href="/admin/bulk-email" class="flex items-center px-4 py-3 text-blue-100 hover:bg-blue-700 bg-blue-700">
                    <i class="fas fa-envelope mr-3"></i>Bulk Email
                </a>
                <a href="/admin/logout" class="flex items-center px-4 py-3 text-blue-100 hover:bg-blue-700 mt-4">
                    <i class="fas fa-sign-out-alt mr-3"></i>Logout
                </a>
            </nav>
        </div>

        <!-- Main content -->
        <div class="flex-1 flex flex-col overflow-hidden md:ml-0">
            <!-- Top bar -->
            <header class="bg-white shadow-sm z-30">
                <div class="flex justify-between items-center p-4">
                    <div>
                        <h2 class="text-xl font-semibold text-gray-800">Bulk Email</h2>
                    </div>
                    <div class="flex items-center space-x-4">
                        <span class="text-gray-600">Welcome, Admin</span>
                        <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center text-white">
                            <i class="fas fa-user"></i>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Page content -->
            <main class="flex-1 overflow-y-auto p-6">
                <div class="max-w-4xl mx-auto">
                    <div class="bg-white rounded-xl shadow-sm p-6">
                        <h1 class="text-2xl font-bold text-gray-800 mb-6">Send Bulk Email</h1>

                        <% if (typeof success !== 'undefined' && success) { %>
                        <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
                            <div class="flex items-center">
                                <i class="fas fa-check-circle text-green-500 mr-2"></i>
                                <span class="text-green-700">Emails sent successfully!</span>
                            </div>
                        </div>
                        <% } %>

                        <form method="POST" action="/admin/send-bulk-email" class="space-y-6">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label class="block text-gray-700 text-sm font-medium mb-2">Filter by Webinar</label>
                                    <select name="webinarId" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                                        <option value="">All Webinars</option>
                                        <% if (typeof webinars !== 'undefined') { %>
                                            <% webinars.forEach(webinar => { %>
                                            <option value="<%= webinar._id %>"><%= webinar.title %></option>
                                            <% }); %>
                                        <% } %>
                                    </select>
                                </div>

                                <div>
                                    <label class="block text-gray-700 text-sm font-medium mb-2">Filter by Payment Status</label>
                                    <select name="paymentStatus" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                                        <option value="">All Users</option>
                                        <option value="paid">Paid Users</option>
                                        <option value="pending">Pending Payment</option>
                                        <option value="failed">Failed Payment</option>
                                    </select>
                                </div>
                            </div>

                            <div>
                                <label class="block text-gray-700 text-sm font-medium mb-2">Email Subject</label>
                                <input type="text" name="subject" required 
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                    placeholder="Enter email subject">
                            </div>

                            <div>
                                <label class="block text-gray-700 text-sm font-medium mb-2">Email Message</label>
                                <textarea name="message" rows="8" required
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                    placeholder="Enter your email message... You can use {{name}} for personalization."></textarea>
                                <p class="text-sm text-gray-500 mt-2">Use {{name}} to personalize the message with user's name.</p>
                            </div>

                            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                                <div class="flex items-start">
                                    <i class="fas fa-info-circle text-blue-500 mt-1 mr-3"></i>
                                    <div>
                                        <h4 class="font-medium text-blue-800">Important Information</h4>
                                        <p class="text-blue-700 text-sm mt-1">
                                            This will send emails to all users matching your selected filters. 
                                            Large email batches may take several minutes to complete.
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn-primary w-full text-lg py-4">
                                <i class="fas fa-paper-plane mr-2"></i>Send Bulk Email
                            </button>
                        </form>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('active');
        }
    </script>
</body>
</html>