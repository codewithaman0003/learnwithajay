<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Webinars - WebinarPro</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
    <style>
        .btn-primary {
            background-color: #4f46e5;
            color: white;
            font-weight: 600;
            padding: 12px 24px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            background-color: #4338ca;
            transform: scale(1.05);
        }
        .card-hover {
            transition: all 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-5px);
        }
    </style>
</head>
<body class="bg-gray-50">
    <!-- Header -->
     <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">
                <div class="brand-logo">A</div>
                <span class="brand-name">Ajay</span>
            </div>
            
            <div class="nav-menu" id="navMenu">
                <a href="/" class="nav-link active">Home</a>
                <a href="/about" class="nav-link">About</a>
                <a href="/webinars" class="nav-link">Webinar</a>
                <a href="/portfolio" class="nav-link">Portfolio</a>
                <a href="/contact" class="nav-link">Contact</a>
            </div>
            
            <div class="nav-actions">
                <button class="btn btn-primary" id="webinarBtn">
                    <a style="text-decoration: none; color: white;" href="/webinars">Let's Join</a>
                    <i class="fas fa-external-link-alt"></i>
                </button>
                <button class="mobile-menu-btn" id="mobileMenuBtn">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        <section class="py-16 bg-gray-100">
            <div class="container mx-auto px-6">
                <h1 class="text-4xl font-bold text-center mb-12">Upcoming Webinars</h1>
                
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    <% if (typeof webinars !== 'undefined' && webinars.length > 0) { %>
                        <% webinars.forEach(webinar => { %>
                        <div class="bg-white rounded-xl shadow-lg overflow-hidden card-hover">
<div style="height: 12rem; background-image:url('/images/carrier.jpg'); background-size: cover; background-position: center; position: relative;">                                <div class="absolute top-4 right-4 bg-white text-blue-600 px-3 py-1 rounded-full text-sm font-semibold">
                                    ₹<%= webinar.price %>
                                </div>
                            </div>
                            <div class="p-6">
                                <h3 class="text-xl font-bold mb-2 text-gray-800"><%= webinar.title %></h3>
                                <p class="text-gray-600 mb-4"><%= webinar.description.substring(0, 120) %>...</p>
                                
                                <div class="flex items-center text-gray-500 mb-4">
                                    <i class="fas fa-calendar-alt mr-2"></i>
                                    <span><%= new Date(webinar.date).toLocaleDateString() %></span>
                                </div>
                                
                                <div class="flex items-center text-gray-500 mb-4">
                                    <i class="fas fa-clock mr-2"></i>
                                    <span><%= webinar.time %> • <%= webinar.duration %></span>
                                </div>
                                
                                <div class="flex items-center text-gray-500 mb-6">
                                    <i class="fas fa-user mr-2"></i>
                                    <span>By <%= webinar.speaker %></span>
                                </div>
                                
                                <a href="/webinar/<%= webinar._id %>" class="btn-primary w-full text-center block">
                                    Register Now
                                </a>
                            </div>
                        </div>
                        <% }); %>
                    <% } else { %>
                        <div class="text-center py-12 col-span-3">
                            <i class="fas fa-calendar-times text-6xl text-gray-400 mb-4"></i>
                            <h3 class="text-2xl font-semibold text-gray-600">No Webinars Available</h3>
                            <p class="text-gray-500 mt-2">Check back later for upcoming webinars.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-12">
        <div class="container mx-auto px-6 text-center">
            <p>&copy; 2024 WebinarPro. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
